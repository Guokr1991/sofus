Cell["\<\
(*how many terms should be generated*)
h = 64;

(* what numerical precision is desired? *)
precision = 256;

str = OpenWrite[\"lgvalues.txt\"];
Write[str, \"abcissae\"];
Do[Write[str]; Write[str, n]; Write[str];
  nlist = symboliclegendre[n, x];
  xnlist = x /. nlist;
  Do[Write[str, N[Part[xnlist, i], precision]], {i, Length[xnlist]}];, {n, 2, \
h}];
Write[str, \"weights\"];
Do[Write[str]; Write[str, n]; Write[str];
  slist := symboliclegendre[n, x];
  xslist = x /. slist;
  Do[Write[str, N[weights[n, Part[xslist, i]], precision]], {i, \
Length[xslist]}];, {n, 2, h}];
Close[str];
\
\>", "Input",
